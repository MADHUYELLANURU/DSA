##  ARRAY IN JAVA

public class Madhu{
    public static void main(String[] args) {
        int[] arr = new int[10];
        for (int i = 0; i < 10; i++) {
            System.out.print( i + " ");
        }
    }
}

##  ARRAYLIST IN JAVA

import java.util.*;
public class DSA{
    public static void main(String[] args) {
        ArrayList<Integer> arr = new ArrayList<>();
        arr.add(1);
        arr.add(2);
        arr.add(3);
        System.out.println("Original List : " + arr);
        arr.add(4);
        System.out.println("Updated List :" + arr);
        arr.remove(1); // remove the element at using index
        System.out.println("List after removing element at index 1 : " + arr);
        arr.set(0,0);
        System.out.println("Final List :"+ arr);
    }
}

##  STRINGBUFFER IN JAVA

public class DSA{
    public static void main(String[] args) {
        StringBuffer A = new StringBuffer();
        A.append("Hello");
        System.out.println("String : " + A);
        A.insert(5," World");
        System.out.println("inserted String : "+A);
        System.out.println( "Capacity of the String : "+A.capacity());
        A.replace(1,3, "Java");
        System.out.println("replaced String : " + A);
        A.delete(0, 7);
        System.out.println("deleted String : "+ A);
        System.out.println("reversed String : "+A.reverse());
    }
}

## STRINGBBUILDER IN JAVA 

public class DSA{
    public static void main(String[] args) {
        StringBuilder A = new StringBuilder();
        A.append("Hello");
        System.out.println("Original String : "+ A);
        A.charAt(0);
        System.out.println("index char :"+A);
        String AB = A.substring(0,3);
        System.out.println("Sub String : "+ AB);
        A.setCharAt(0,'M');
        System.out.println("index Changed : "+A);
        A.deleteCharAt(0);
        System.out.println("index deleted : "+A);
    }
}
