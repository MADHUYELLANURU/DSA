##  Arithmetic Program Series

import java.util.Scanner;

public class APSeries {
   public APSeries() {
   }

   public static void main(String[] var0) {
      Scanner var1 = new Scanner(System.in);
      System.out.print("Enter the first element(a) : ");
      int var2 = var1.nextInt();
      System.out.print("Enter the common difference (d): ");
      int var3 = var1.nextInt();
      System.out.print("Enter the number of terms (n) : ");
      int var4 = var1.nextInt();
      System.out.print("Arithmetic Program Series : ");

      for(int var5 = 0; var5 < var4; ++var5) {
         int var6 = var2 + var5 * var3;
         System.out.print("" + var6 + " ");
      }

   }
}
##  Geometric Progression Series

import java.util.Scanner;
public class GPSeries{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter the first Element(a) : ");
        int a = sc.nextInt();
        System.out.print("Enter the common ration(r) : ");
        int r =sc.nextInt();
        System.out.print("Enter the number of terms(n) : ");
        int n = sc.nextInt();
        System.out.print("Geometric Progression Series : ");
        for(int i=0;i<n;i++){
            int sum = (int) (a*Math.pow(r,i));
            System.out.print(sum+" ");
        }
    }
}
